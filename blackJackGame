import discord
from discord.ext import commands

class blackJack(commands.Cog):
    def __init__(self, bot):
        self.bot = bot

    @commands.command()
    async def blackJack(self, ctx):
        await ctx.send(f'Welcome To Blackjack!')
        print(current total)

def setup(bot):
    bot.add_cog(blackJack(bot))

